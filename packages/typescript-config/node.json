{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": [
      "ESNext"
    ],
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "esModuleInterop": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
